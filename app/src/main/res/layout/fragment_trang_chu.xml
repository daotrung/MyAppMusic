<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".Fragment.FragmentTrangChu">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragmentbanner"
            android:name="com.daotrung.myappmusic.Fragment.FragmentBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <fragment
            android:id="@+id/fragmentplaylist"
            android:name="com.daotrung.myappmusic.Fragment.FragmentPlayList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <fragment
            android:id="@+id/fragmentchudetheloai"
            android:name="com.daotrung.myappmusic.Fragment.FragmentChuDeTheLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <fragment
            android:id="@+id/fragmentalbum"
            android:name="com.daotrung.myappmusic.Fragment.FragmentAlbumHot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <fragment
            android:id="@+id/fragmentlike"
            android:name="com.daotrung.myappmusic.Fragment.FragmentBaiHatHot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</ScrollView>